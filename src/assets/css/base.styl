html
  font-size: 10px
  box-sizing: border-box
  height: 100%

*, *:before, *:after
  box-sizing: inherit

*
  margin: 0
  padding: 0

p
  line-height: 1.4

body
  background-color: #fff
  color: #333
  font-family: "-apple-system", "system-ui", BlinkMacSystemFont, "Segoe UI", Roboto, Ubuntu, Helvetica, Arial, sans-serif
  height: 100%

ol, ul
  list-style: none

input, select, textarea, button
  font-family: inherit