$gray-factor = 50%
$investment-color = #ece6d4

grayfilter()
  -webkit-filter: grayscale($gray-factor)
  -moz-filter: grayscale($gray-factor)
  -ms-filter: grayscale($gray-factor)
  filter: grayscale($gray-factor)

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

html
body
  height: 100%

#wrap
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -60px

#push
#footer
  height: 60px
  p
    text-align: center
    color: #aaa
    margin-top: 1em

@media screen and (min-width: 750px)
  .navbar .nav
    width: 100%
    li
      width: 16.66%

h1
  text-align: center
  @media screen and (max-width: 500px)
    font-size: 2em

h2
  font-size: 1.5em

.logo
  h1
    text-align: center
    @media screen and (min-width: 500px)
      margin-top: 50px
  img
    display: block
    grayfilter()
    margin: 0 auto
    @media screen and (min-width: 500px)
      margin: 100px auto

.differentiation-list
  list-style-type: lower-roman

.principals
  h2
    padding-top: 0
    margin-top: 0
  img
    width: 120px
    height: auto
    margin-top: 1em
    padding-right: 2em

.investment
  &:nth-child(odd)
    background-color: $investment-color
  &:nth-child(even)
    background-color: $investment-color - 8%
  padding: 1em
  border-radius: 10px
  margin-bottom: 1em
  .investment-name
    color: #000
    font-weight: bold
    a
      color: #000
      text-decoration: underline;

address
  .email
    unicode-bidi: bidi-override
    direction: rtl
    margin-left: 0.25em
