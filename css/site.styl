$gray-factor = 50%

.centered
  text-align: center

@media screen and (min-width: 500px)
  .navbar .nav
    width: 100%
    li
      width: 20%

h1
  @media screen and (max-width: 500px)
    font-size: 2em

.logo
  h1
    text-align: center
    @media screen and (min-width: 500px)
      margin-top: 50px
  img
    display: block
    -webkit-filter: grayscale($gray-factor)
    -moz-filter: grayscale($gray-factor)
    -ms-filter: grayscale($gray-factor)
    filter: grayscale($gray-factor)
    margin: 0 auto
    @media screen and (min-width: 500px)
      margin: 100px auto

footer p
  text-align: center
  color: #aaa
  margin-top: 1em

.differentiation-list
  list-style-type: lower-roman
