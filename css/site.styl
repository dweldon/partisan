$gray-factor = 50%

@media screen and (min-width: 500px)
  .navbar .nav
    width: 100%
    li
      width: 20%

.logo
  h1
    text-align: center
    @media screen and (min-width: 500px)
      margin-top: 50px
    @media screen and (max-width: 500px)
      font-size: 2em

  img
    display: block
    -webkit-filter: grayscale($gray-factor)
    -moz-filter: grayscale($gray-factor)
    -ms-filter: grayscale($gray-factor)
    filter: grayscale($gray-factor)
    margin: 0 auto
    @media screen and (min-width: 500px)
      margin: 100px auto

footer p
  text-align: center
  color: #aaa
  margin-top: 1em
