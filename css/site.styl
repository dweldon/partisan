$gray-factor = 50%
$investment-color = #ece6d4

.centered
  text-align: center

@media screen and (min-width: 750px)
  .navbar .nav
    width: 100%
    li
      width: 16.66%

h1
  @media screen and (max-width: 500px)
    font-size: 2em

.logo
  h1
    text-align: center
    @media screen and (min-width: 500px)
      margin-top: 50px
  img
    display: block
    -webkit-filter: grayscale($gray-factor)
    -moz-filter: grayscale($gray-factor)
    -ms-filter: grayscale($gray-factor)
    filter: grayscale($gray-factor)
    margin: 0 auto
    @media screen and (min-width: 500px)
      margin: 100px auto

footer p
  text-align: center
  color: #aaa
  margin-top: 1em

.differentiation-list
  list-style-type: lower-roman

.principals
  h2
    font-size: 1.5em
    padding-top: 0
    margin-top: 0
  img
    width: 120px
    height: auto
    margin-top: 1em
    padding-right: 2em

.investment
  &:nth-child(odd)
    background-color: $investment-color
  &:nth-child(even)
    background-color: $investment-color - 8%
  &:last-child
    margin-bottom: 100px
  padding: 1em
  border-radius: 10px
  margin-bottom: 1em
  .investment-name
    color: #000
    font-weight: bold
    a
      color: #000
      text-decoration: underline;

address
  .email
    unicode-bidi: bidi-override
    direction: rtl
    margin-left: 0.25em
