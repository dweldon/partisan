{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["airbnb-base", "plugin:vue/recommended", "prettier", "prettier/vue"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "warn",
    "comma-dangle": ["error", "always-multiline", { "functions": "never" }],
    "require-await": "error",
    "vue/no-v-html": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["~", "./src"]
      ]
    }
  },
  "parserOptions": {
    "ecmaVersion": 2018
  }
}
