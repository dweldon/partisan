{
  "editor.tabSize": 2,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue-html",
    {
      "language": "vue",
      "autoFix": true
    },
  ],
  "eslint.autoFixOnSave": true,
  "vetur.validation.script": false,
  "vetur.validation.template": false,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "dist": true,
    ".cache": true,
    "node_modules": true,
  },
  "cSpell.words": [
    "bidi",
    "gridsome",
    "styl",
    "tahoma",
    "verdana"
  ],
  "cSpell.enabledLanguageIds": [
    "vue",
    "stylus",
    "markdown",
    "javascript",
  ],
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
  },
  "files.trimTrailingWhitespace": true,
}